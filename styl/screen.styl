gray(color, opacity = 1)
	return rgba(color,color,color, opacity)

*
	margin 0
	padding 0
	border 0
	font-size 100%
	box-sizing border-box

body
	font-size 14px
	font-family Arial
	
h1
	font-size 2em

article
	width 900px
	margin 0 auto
	padding 50px 20px
	background-color gray(200)


#rangSliderWrapper
	height 100px
	padding 50px

